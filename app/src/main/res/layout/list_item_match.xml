<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="128dp"
    android:orientation="horizontal"
    android:padding="8dp"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.191">

        <TextView
            android:id="@+id/tv_match_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorMatchParent"
            android:gravity="center"
            android:text="008" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.809"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.191">

            <TextView
                android:id="@+id/tv_vs"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Man vs LivePool" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.191">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="2">

                <!-- 1 row, 5 columns WDL labels -->
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="3.691">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.191"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/colorWin"
                        android:gravity="center"
                        android:text="@string/win" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/colorDraw"
                        android:gravity="center"
                        android:text="@string/draw" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/colorLose"
                        android:gravity="center"
                        android:text="@string/lose" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"/>
                </TableRow>
            </TableLayout>

        </LinearLayout>

        <!-- 2 rows, 5 columns -->
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.618"
            android:divider="@drawable/divider_vertical"
            android:orientation="vertical"
            android:showDividers="middle|beginning|end"
            android:weightSum="2">

            <!-- row 1 -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:divider="@drawable/divider_horizontal"
                android:orientation="horizontal"
                android:showDividers="beginning|middle|end"
                android:weightSum="3.791">

                <TextView
                    android:id="@+id/tv_none_spread"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.291"
                    android:gravity="center"
                    android:text="0" />

                <TextView
                    android:id="@+id/tv_win_odds"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="1.67" />

                <TextView
                    android:id="@+id/tv_draw_odds"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="3.45" />

                <TextView
                    android:id="@+id/tv_lose_odds"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="4.62" />

                <TextView
                    android:id="@+id/tv_none_spread_more_odds"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text="@string/more" />
            </TableRow>

            <!-- row 2 -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:divider="@drawable/divider_horizontal"
                android:orientation="horizontal"
                android:showDividers="beginning|middle|end"
                android:weightSum="3.791">

                <TextView
                    android:id="@+id/tv_spread"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.291"
                    android:gravity="center"
                    android:text="-1" />

                <TextView
                    android:id="@+id/tv_spread_win_odds"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="3.27" />

                <TextView
                    android:id="@+id/tv_spread_draw_odds"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="4.53" />

                <TextView
                    android:id="@+id/tv_spread_lose_odds"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="1.69" />

                <TextView
                    android:id="@+id/tv_spread_more_odds"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text="@string/more" />
            </TableRow>

        </TableLayout>

    </LinearLayout>

</LinearLayout>
